@{
    Layout = null;
}
<!doctype html>
<html lang="tr">
<head>
    <title>Sağlık ve Beslenme Takip Sistemi</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href='https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/website-menu-19/css/style.css">

    <style>
        :root {
            --primary-color: #667eea;
            --secondary-color: #764ba2;
            --success-color: #28a745;
            --warning-color: #ffc107;
            --danger-color: #dc3545;
            --info-color: #17a2b8;
            --light-color: #f8f9fa;
            --dark-color: #343a40;
            --gradient-primary: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --gradient-success: linear-gradient(135deg, #56ab2f 0%, #a8e6cf 100%);
            --gradient-warning: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            --gradient-info: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            --shadow-soft: 0 10px 30px rgba(0,0,0,0.1);
            --shadow-hover: 0 15px 40px rgba(0,0,0,0.15);
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            margin: 0;
        }

        #colorlib-page {
            background: transparent;
        }

        #colorlib-aside {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 0 20px 20px 0;
            box-shadow: var(--shadow-soft);
            border-right: 3px solid var(--primary-color);
        }

        #colorlib-main-menu ul {
            padding: 2rem 0;
        }

        #colorlib-main-menu ul li {
            margin: 0.5rem 0;
            border-radius: 15px;
            margin-left: 1rem;
            margin-right: 1rem;
            transition: all 0.3s ease;
        }

        #colorlib-main-menu ul li.colorlib-active {
            background: var(--gradient-primary);
            box-shadow: var(--shadow-soft);
            color: white;
            font-weight: 600;
            padding: 1rem;
            text-align: center;
            border-radius: 15px;
            margin-bottom: 2rem;
        }

        #colorlib-main-menu ul li a {
            color: var(--dark-color);
            font-weight: 500;
            font-size: 1.1rem;
            padding: 1rem 1.5rem;
            border-radius: 15px;
            transition: all 0.3s ease;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        #colorlib-main-menu ul li a:hover {
            background: var(--gradient-primary);
            color: white;
            transform: translateY(-2px);
            box-shadow: var(--shadow-hover);
            text-decoration: none !important;
            border-bottom: none !important;
        }

        #colorlib-main-menu ul li a:hover::after {
            text-decoration: none !important;
            border-bottom: none !important;
            content: none !important;
        }

        #colorlib-main-menu ul li a i {
            font-size: 1.2rem;
            width: 24px;
            text-align: center;
        }

        #colorlib-main {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            border-radius: 20px 0 0 20px;
            margin: 2rem 2rem 2rem 0;
            box-shadow: var(--shadow-soft);
            min-height: calc(100vh - 4rem);
        }

        .ftco-section {
            padding: 2rem;
        }

        .container-fluid {
            max-width: 100%;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            #colorlib-main {
                margin: 1rem;
                border-radius: 20px;
            }

            #colorlib-aside {
                border-radius: 20px;
            }

            .ftco-section {
                padding: 1rem;
            }
        }

        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 10px;
        }

        ::-webkit-scrollbar-thumb {
            background: var(--primary-color);
            border-radius: 10px;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: var(--secondary-color);
        }
    </style>
</head>
<body>
    <div id="colorlib-page">
        <a href="#" class="js-colorlib-nav-toggle colorlib-nav-toggle"><i></i></a>
        <aside id="colorlib-aside" role="complementary" class="js-fullheight">
            <nav id="colorlib-main-menu" role="navigation">
                <ul>
                    <li class="colorlib-active">
                        <i class="fas fa-user-circle" style="margin-right: 10px;"></i>
                        @ViewBag.UserName
                    </li>
                    <li>
                        <a href="/Category/Index">
                            <i class="fas fa-chart-line"></i>
                            Fiziksel Bilgilerim
                        </a>
                    </li>
                    <li>
                        <a href="/UserMedication/Index">
                            <i class="fas fa-pills"></i>
                            İlaçlarım
                        </a>
                    </li>
                    <li>
                        <a href="/UserAllergy/Index">
                            <i class="fas fa-exclamation-triangle"></i>
                            Alerjilerim
                        </a>
                    </li>
                    <li>
                        <a href="/Product/Search">
                            <i class="fas fa-search"></i>
                            Ürün Ara
                        </a>
                    </li>
                    <li>
                        <a href="/Auth/Logout" style="color: var(--danger-color);">
                            <i class="fas fa-sign-out-alt"></i>
                            Çıkış Yap
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>

        <div id="colorlib-main">
            <section class="ftco-section pt-4 mb-5 ftco-intro">
                <div class="container-fluid px-3 px-md-0">
                    <div class="row">
                        <div class="col-md-12 mb-4">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>

    <script src="~/website-menu-19/js/jquery.min.js"></script>
    <script src="~/website-menu-19/js/popper.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/website-menu-19/js/main.js"></script>

</body>
@RenderSection("Scripts", required: false)
</html>

