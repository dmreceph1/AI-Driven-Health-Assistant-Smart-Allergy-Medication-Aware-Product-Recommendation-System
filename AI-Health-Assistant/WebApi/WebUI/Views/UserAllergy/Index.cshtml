@model WebUI.Models.PaginationModel<WebUI.Models.UserAllergyModel>
@{
    ViewData["Title"] = "Alerjilerim";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<style>
    .allergies-container {
        margin-top: 2rem;
    }

    .page-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .page-title {
        font-size: 3rem;
        font-weight: 700;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 1rem;
    }

    .page-subtitle {
        font-size: 1.2rem;
        color: #6c757d;
        font-weight: 400;
    }

    .allergies-card {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 25px;
        padding: 2.5rem;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        margin-bottom: 2rem;
        border: none;
        backdrop-filter: blur(10px);
    }

    .card-header-custom {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white;
        padding: 1.5rem 2rem;
        border-radius: 20px;
        margin-bottom: 2rem;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .card-title-custom {
        font-size: 1.5rem;
        font-weight: 600;
        margin: 0;
    }

    .allergies-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 1rem;
    }

    .allergies-table thead th {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 1rem 1.5rem;
        font-weight: 600;
        text-align: left;
        border: none;
        font-size: 1rem;
    }

    .allergies-table thead th:first-child {
        border-radius: 15px 0 0 15px;
    }

    .allergies-table thead th:last-child {
        border-radius: 0 15px 15px 0;
    }

    .allergies-table tbody tr {
        transition: all 0.3s ease;
    }

    .allergies-table tbody td {
        padding: 1.2rem 1.5rem;
        border: none;
        background: rgba(255, 255, 255, 0.9);
        font-weight: 500;
    }

    .allergies-table tbody tr:first-child td:first-child {
        border-radius: 15px 0 0 15px;
    }

    .allergies-table tbody tr:first-child td:last-child {
        border-radius: 0 15px 15px 0;
    }

    .table-row-active {
        box-shadow: 0 10px 30px rgba(86, 171, 47, 0.3);
    }

    .table-row-active td {
        background: linear-gradient(135deg, rgba(86, 171, 47, 0.1) 0%, rgba(168, 230, 207, 0.1) 100%);
        border-left: 4px solid #56ab2f;
    }

    .table-row-inactive {
        box-shadow: 0 10px 30px rgba(255, 107, 107, 0.3);
    }

    .table-row-inactive td {
        background: linear-gradient(135deg, rgba(255, 107, 107, 0.1) 0%, rgba(255, 168, 168, 0.1) 100%);
        border-left: 4px solid #ff6b6b;
    }

    .status-badge {
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.9rem;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .status-active {
        background: linear-gradient(135deg, #56ab2f 0%, #a8e6cf 100%);
        color: white;
    }

    .status-inactive {
        background: linear-gradient(135deg, #ff6b6b 0%, #ffa8a8 100%);
        color: white;
    }

    .action-btn {
        background: linear-gradient(135deg, #56ab2f 0%, #a8e6cf 100%);
        border: none;
        padding: 0.7rem 1.5rem;
        border-radius: 15px;
        color: white;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 10px 25px rgba(86, 171, 47, 0.3);
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .action-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 15px 35px rgba(86, 171, 47, 0.4);
    }

    .add-allergy-btn {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        border: none;
        border-radius: 50px;
        padding: 1rem 3rem;
        color: white;
        font-weight: 600;
        font-size: 1.1rem;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 12px;
        transition: all 0.3s ease;
        box-shadow: 0 15px 35px rgba(79, 172, 254, 0.3);
        margin-top: 2rem;
    }

    .add-allergy-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 20px 45px rgba(79, 172, 254, 0.4);
        color: white;
        text-decoration: none;
    }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
        border-radius: 25px;
        box-shadow: 0 20px 40px rgba(252, 182, 159, 0.3);
    }

    .empty-icon {
        font-size: 5rem;
        color: #ff7675;
        margin-bottom: 2rem;
    }

    .empty-title {
        font-size: 2rem;
        font-weight: 600;
        color: #2d3436;
        margin-bottom: 1rem;
    }

    .empty-text {
        font-size: 1.2rem;
        color: #636e72;
        margin-bottom: 2rem;
    }

    .btn-container {
        text-align: center;
        margin-top: 3rem;
    }

    .pagination-container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 2rem 0;
        gap: 1rem;
    }

    .pagination-info {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 0.7rem 1.5rem;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.9rem;
    }

    .pagination-nav {
        display: flex;
        gap: 0.5rem;
        align-items: center;
    }

    .pagination-btn {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        border: none;
        border-radius: 12px;
        padding: 0.7rem 1rem;
        color: white;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        box-shadow: 0 5px 15px rgba(79, 172, 254, 0.3);
        display: inline-flex;
        align-items: center;
        gap: 8px;
        min-width: 45px;
        justify-content: center;
    }

    .pagination-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(79, 172, 254, 0.4);
        color: white;
        text-decoration: none;
    }

    .pagination-btn.current {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        box-shadow: 0 8px 25px rgba(240, 147, 251, 0.4);
    }

    .pagination-btn:disabled {
        background: #ccc;
        cursor: not-allowed;
        box-shadow: none;
    }

    .pagination-btn:disabled:hover {
        transform: none;
        box-shadow: none;
    }

    @@media (max-width: 768px) {
        .page-title {
            font-size: 2rem;
        }
        
        .allergies-card {
            padding: 1.5rem;
            margin: 1rem;
        }
        
        .allergies-table {
            font-size: 0.9rem;
        }
        
        .allergies-table thead th,
        .allergies-table tbody td {
            padding: 0.8rem 1rem;
        }
        
        .add-allergy-btn {
            padding: 0.8rem 2rem;
            font-size: 1rem;
        }

        .pagination-container {
            flex-direction: column;
            gap: 1rem;
        }

        .pagination-nav {
            flex-wrap: wrap;
            justify-content: center;
        }
    }

    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .allergies-card {
        animation: slideIn 0.6s ease;
    }
</style>

<div class="allergies-container">
    <div class="page-header">
        <h1 class="page-title">
            <i class="fas fa-exclamation-triangle" style="margin-right: 15px;"></i>
            Alerjilerim
        </h1>
        <p class="page-subtitle">Alerji bilgilerinizi takip edin ve yönetin</p>
    </div>

    @if (Model != null && Model.Items.Any())
    {
        <div class="allergies-card">
            <div class="card-header-custom">
                <i class="fas fa-list-alt"></i>
                <h3 class="card-title-custom">Kayıtlı Alerji Bilgilerim</h3>
            </div>
            
            <div style="overflow-x: auto;">
                <table class="allergies-table">
                    <thead>
                        <tr>
                            <th><i class="fas fa-tag" style="margin-right: 8px;"></i>Alerji Adı</th>
                            <th><i class="fas fa-calendar-plus" style="margin-right: 8px;"></i>Başlangıç Tarihi</th>
                            <th><i class="fas fa-calendar-minus" style="margin-right: 8px;"></i>Bitiş Tarihi</th>
                            <th><i class="fas fa-info-circle" style="margin-right: 8px;"></i>Durum</th>
                            <th><i class="fas fa-cogs" style="margin-right: 8px;"></i>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var allergy in Model.Items)
                        {
                            var isActive = allergy.UpdateDate == DateTime.MinValue;
                            var rowClass = isActive ? "table-row-active" : "table-row-inactive";
                            var status = isActive ? "Aktif" : "Pasif";
                            var statusClass = isActive ? "status-active" : "status-inactive";
                            
                            <tr class="@rowClass">
                                <td>
                                    <strong>@allergy.AllergyName</strong>
                                </td>
                                <td>
                                    <i class="fas fa-calendar" style="margin-right: 8px; color: #667eea;"></i>
                                    @allergy.DiagnosisDate.ToString("dd.MM.yyyy")
                                </td>
                                <td>
                                    @if (allergy.UpdateDate == DateTime.MinValue)
                                    {
                                        <span style="color: #6c757d; font-style: italic;">
                                            <i class="fas fa-minus" style="margin-right: 8px;"></i>
                                            Devam ediyor
                                        </span>
                                    }
                                    else
                                    {
                                        <i class="fas fa-calendar-check" style="margin-right: 8px; color: #ff6b6b;"></i>
                                        @allergy.UpdateDate.ToString("dd.MM.yyyy")
                                    }
                                </td>
                                <td>
                                    <span class="status-badge @statusClass">
                                        @if (isActive)
                                        {
                                            <i class="fas fa-check-circle"></i>
                                        }
                                        else
                                        {
                                            <i class="fas fa-times-circle"></i>
                                        }
                                        @status
                                    </span>
                                </td>
                                <td>
                                    @if (isActive)
                                    {
                                        <form method="post" action="@Url.Action("Bitir", "UserAllergy")" style="display: inline;">
                                            <input type="hidden" name="userAllergyId" value="@allergy.UserAllergyID" />
                                            <button type="submit" class="action-btn">
                                                <i class="fas fa-stop"></i>
                                                Bitir
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <span style="color: #6c757d; font-style: italic;">
                                            <i class="fas fa-check" style="margin-right: 8px;"></i>
                                            Tamamlandı
                                        </span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (Model.TotalPages > 1)
            {
                <div class="pagination-container">
                    <div class="pagination-info">
                        <i class="fas fa-info-circle" style="margin-right: 8px;"></i>
                        Sayfa @Model.CurrentPage / @Model.TotalPages (Toplam @Model.TotalItems alerji)
                    </div>
                    
                    <div class="pagination-nav">
                        @if (Model.HasPreviousPage)
                        {
                            <a href="@Url.Action("Index", new { page = 1 })" class="pagination-btn">
                                <i class="fas fa-angle-double-left"></i>
                            </a>
                            <a href="@Url.Action("Index", new { page = Model.CurrentPage - 1 })" class="pagination-btn">
                                <i class="fas fa-angle-left"></i>
                            </a>
                        }

                        @foreach (var pageNumber in Model.GetPageNumbers())
                        {
                            if (pageNumber == Model.CurrentPage)
                            {
                                <span class="pagination-btn current">@pageNumber</span>
                            }
                            else
                            {
                                <a href="@Url.Action("Index", new { page = pageNumber })" class="pagination-btn">@pageNumber</a>
                            }
                        }

                        @if (Model.HasNextPage)
                        {
                            <a href="@Url.Action("Index", new { page = Model.CurrentPage + 1 })" class="pagination-btn">
                                <i class="fas fa-angle-right"></i>
                            </a>
                            <a href="@Url.Action("Index", new { page = Model.TotalPages })" class="pagination-btn">
                                <i class="fas fa-angle-double-right"></i>
                            </a>
                        }
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-icon">
                <i class="fas fa-heartbeat"></i>
            </div>
            <h3 class="empty-title">Henüz Alerji Kaydınız Bulunmuyor</h3>
            <p class="empty-text">
                Sağlık bilgilerinizi takip etmek için alerjilerinizi ekleyebilirsiniz.
            </p>
        </div>
    }

    <div class="btn-container">
        <a href="@Url.Action("Ekle", "UserAllergy")" class="add-allergy-btn">
            <i class="fas fa-plus-circle"></i>
            Yeni Alerji Ekle
        </a>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const tableRows = document.querySelectorAll('.allergies-table tbody tr');
        tableRows.forEach(row => {
            row.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-2px)';
            });
            
            row.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
            });
        });

        const forms = document.querySelectorAll('form[action*="Bitir"]');
        forms.forEach(form => {
            form.addEventListener('submit', function(e) {
                if (!confirm('Bu alerjiyi tamamlandı olarak işaretlemek istediğinizden emin misiniz?')) {
                    e.preventDefault();
                }
            });
        });

        const paginationBtns = document.querySelectorAll('.pagination-btn');
        paginationBtns.forEach(btn => {
            btn.addEventListener('mouseenter', function() {
                if (!this.classList.contains('current') && !this.disabled) {
                    this.style.transform = 'translateY(-2px)';
                }
            });
            
            btn.addEventListener('mouseleave', function() {
                if (!this.classList.contains('current')) {
                    this.style.transform = 'translateY(0)';
                }
            });
        });
    });
</script>



