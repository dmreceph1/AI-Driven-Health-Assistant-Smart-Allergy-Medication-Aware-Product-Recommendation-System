@model WebUI.Models.ProductSearchModel
@{
    ViewData["Title"] = "Ürün Ara";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<style>
    .search-container {
        margin-top: 2rem;
    }

    .page-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .page-title {
        font-size: 3rem;
        font-weight: 700;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 1rem;
    }

    .page-subtitle {
        font-size: 1.2rem;
        color: #6c757d;
        font-weight: 400;
    }

    .search-card {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        border-radius: 25px;
        padding: 2.5rem;
        box-shadow: 0 20px 40px rgba(79, 172, 254, 0.3);
        margin-bottom: 3rem;
        border: none;
    }

    .search-form {
        position: relative;
    }

    .search-input {
        width: 100%;
        padding: 1.5rem 2rem;
        padding-right: 8rem;
        border: none;
        border-radius: 20px;
        font-size: 1.1rem;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        font-family: 'Poppins', sans-serif;
    }

    .search-input:focus {
        outline: none;
        background: rgba(255, 255, 255, 1);
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
        transform: translateY(-2px);
    }

    .search-input::placeholder {
        color: #adb5bd;
    }

    .search-btn {
        position: absolute;
        right: 8px;
        top: 50%;
        transform: translateY(-50%);
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        padding: 1rem 2rem;
        border-radius: 15px;
        color: white;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 10px 25px rgba(102, 126, 234, 0.3);
    }

    .search-btn:hover {
        transform: translateY(-50%) translateY(-2px);
        box-shadow: 0 15px 35px rgba(102, 126, 234, 0.4);
    }

    .search-btn i {
        margin-right: 8px;
    }

    .result-card {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 25px;
        padding: 2.5rem;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        margin-bottom: 2rem;
        border: none;
        backdrop-filter: blur(10px);
        animation: slideIn 0.6s ease;
    }

    .result-header {
        background: linear-gradient(135deg, #56ab2f 0%, #a8e6cf 100%);
        color: white;
        padding: 1.5rem 2rem;
        border-radius: 20px;
        margin-bottom: 2rem;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .result-title {
        font-size: 1.5rem;
        font-weight: 600;
        margin: 0;
    }

    .ingredient-list {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1rem;
        margin-top: 1.5rem;
    }

    .ingredient-item {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white;
        padding: 1rem 1.5rem;
        border-radius: 15px;
        border: none;
        box-shadow: 0 10px 25px rgba(240, 147, 251, 0.3);
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .ingredient-item:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 35px rgba(240, 147, 251, 0.4);
    }

    .ingredient-item i {
        font-size: 1.1rem;
    }

    .no-result-card {
        background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
        border-radius: 25px;
        padding: 3rem;
        text-align: center;
        box-shadow: 0 20px 40px rgba(252, 182, 159, 0.3);
        animation: slideIn 0.6s ease;
    }

    .no-result-icon {
        font-size: 4rem;
        color: #ff7675;
        margin-bottom: 1.5rem;
    }

    .no-result-title {
        font-size: 1.8rem;
        font-weight: 600;
        color: #2d3436;
        margin-bottom: 1rem;
    }

    .no-result-text {
        font-size: 1.1rem;
        color: #636e72;
    }

    .alert-custom {
        background: linear-gradient(135deg, #ff6b6b 0%, #ffa8a8 100%);
        border: none;
        border-radius: 20px;
        color: white;
        padding: 1.5rem 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 15px 35px rgba(255, 107, 107, 0.3);
        display: flex;
        align-items: center;
        gap: 15px;
    }

    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .search-tips {
        background: rgba(255, 255, 255, 0.9);
        border-radius: 20px;
        padding: 2rem;
        margin-top: 2rem;
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
    }

    .tips-title {
        font-size: 1.3rem;
        font-weight: 600;
        color: #2d3436;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .tips-list {
        list-style: none;
        padding: 0;
    }

    .tips-list li {
        padding: 0.5rem 0;
        color: #636e72;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .tips-list li i {
        color: #00b894;
        font-size: 1.1rem;
    }

    @@media (max-width: 768px) {
        .page-title {
            font-size: 2rem;
        }
        
        .search-card, .result-card, .no-result-card {
            padding: 1.5rem;
            margin: 1rem;
        }
        
        .search-input {
            padding-right: 6rem;
        }
        
        .search-btn {
            right: 6px;
            padding: 0.8rem 1.5rem;
        }
        
        .ingredient-list {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="search-container">
    <div class="page-header">
        <h1 class="page-title">
            <i class="fas fa-search" style="margin-right: 15px;"></i>
            Ürün Arama
        </h1>
        <p class="page-subtitle">Ürün içeriklerini öğrenin ve sağlık verilerinizle karşılaştırın</p>
    </div>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert-custom">
            <i class="fas fa-exclamation-triangle"></i>
            <div>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p style="margin: 0;">@error.ErrorMessage</p>
                }
            </div>
        </div>
    }

    <div class="search-card">
        <form method="post" action="/Product/Search" class="search-form">
            <input type="text" 
                   class="search-input" 
                   placeholder="Ürün adını girin (örn: Coca Cola, Nutella, Eti Canga...)" 
                   name="ProductName" 
                   value="@Model.ProductName">
            <button class="search-btn" type="submit">
                <i class="fas fa-search"></i>
                Ara
            </button>
        </form>
    </div>

    @if (Model.ProductContents != null && Model.ProductContents.Any())
    {
        <div class="result-card">
            <div class="result-header">
                <i class="fas fa-list-ul"></i>
                <h3 class="result-title">
                    @(string.IsNullOrEmpty(Model.RealProductName) ? Model.ProductName : Model.RealProductName) İçerikleri
                </h3>
            </div>
            <div class="ingredient-list">
                @foreach (var content in Model.ProductContents)
                {
                    <div class="ingredient-item">
                        <i class="fas fa-leaf"></i>
                        <span>@content</span>
                    </div>
                }
            </div>
        </div>
    }
    else if (!string.IsNullOrEmpty(Model.ProductName) && ViewData.ModelState.IsValid)
    {
        <div class="no-result-card">
            <div class="no-result-icon">
                <i class="fas fa-search-minus"></i>
            </div>
            <h3 class="no-result-title">Ürün Bulunamadı</h3>
            <p class="no-result-text">
                "@Model.ProductName" için içerik bulunamadı. Lütfen ürün adını kontrol ederek tekrar deneyin.
            </p>
        </div>
    }

    @if (string.IsNullOrEmpty(Model.ProductName) || (!Model.ProductContents?.Any() == true && ViewData.ModelState.IsValid))
    {
        <div class="search-tips">
            <h4 class="tips-title">
                <i class="fas fa-lightbulb"></i>
                Arama İpuçları
            </h4>
            <ul class="tips-list">
                <li>
                    <i class="fas fa-check"></i>
                    Ürün adını tam olarak yazın (örn: "Coca Cola" yerine "Cola")
                </li>
                <li>
                    <i class="fas fa-check"></i>
                    Marka adını da ekleyin (örn: "Eti Canga", "Ülker Çikolata")
                </li>
                <li>
                    <i class="fas fa-check"></i>
                    Türkçe karakterler kullanın
                </li>
                <li>
                    <i class="fas fa-check"></i>
                    Kısaltmalar yerine tam isimleri tercih edin
                </li>
            </ul>
        </div>
    }
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const resultCards = document.querySelectorAll('.result-card, .no-result-card');
        resultCards.forEach((card, index) => {
            card.style.opacity = '0';
            card.style.transform = 'translateY(30px)';
            setTimeout(() => {
                card.style.transition = 'all 0.6s ease';
                card.style.opacity = '1';
                card.style.transform = 'translateY(0)';
            }, index * 200);
        });

        const searchInput = document.querySelector('.search-input');
        searchInput.addEventListener('focus', function() {
            this.parentElement.parentElement.style.transform = 'scale(1.02)';
        });

        searchInput.addEventListener('blur', function() {
            this.parentElement.parentElement.style.transform = 'scale(1)';
        });
    });
</script>