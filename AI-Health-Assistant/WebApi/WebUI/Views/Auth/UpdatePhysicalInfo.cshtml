@model WebUI.Models.UserPhysicalInfoDto
@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Fiziksel Bilgileri Güncelle</h3>
                </div>
                <div class="card-body">
                    @if (ViewBag.Height != null && ViewBag.Weight != null)
                    {
                        <div class="alert alert-info">
                            <p>Güncel Boy: @ViewBag.Height cm</p>
                            <p>Güncel Kilo: @ViewBag.Weight kg</p>
                        </div>
                    }
                    <form asp-controller="Auth" asp-action="UpdatePhysicalInfo" method="post">
                        <input type="hidden" asp-for="InfoID" />
                        <input type="hidden" asp-for="UserID" />
                        
                        <div class="form-group mb-3">
                            <label asp-for="Height" class="form-label">Boy (cm)</label>
                            <input asp-for="Height" class="form-control" type="number" step="0.01" required />
                            <span asp-validation-for="Height" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="Weight" class="form-label">Kilo (kg)</label>
                            <input asp-for="Weight" class="form-control" type="number" step="0.01" required />
                            <span asp-validation-for="Weight" class="text-danger"></span>
                        </div>
                        
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-border btn-round">Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}